{
  "name": "intranet",
  "scripts": {
    "postdeploy": "python manage.py deploy"
  },
  "env": {
    "USER_DATA": "./data/users.csv",
    "FLASK_CONFIG": "production",
    "LOGIN_REQUIRED": "False",
    "APP_DEV_INTAKE_EMAIL_RECIPIENTS": "appdev@records.nyc.gov",
    "MAIL_SERVER": "$MAILGUN_SMTP_SERVER",
    "MAIL_PORT": "$MAILGUN_SMTP_PORT",
    "MAIL_USERNAME": "$MAILGUN_SMTP_LOGIN",
    "MAIL_PASSWORD": "$MAILGUN_SMTP_PASSWORD",
    "MAIL_USE_TLS": "True"
  },
  "formation": {},
  "addons": [
    "heroku-postgresql",
    "mailgun"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "stack": "heroku-18"
}
